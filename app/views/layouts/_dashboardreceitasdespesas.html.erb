<div class="row">
      <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
          <div class="inner">
            <h3>
              <% @pedidos = Pedido.all %>
              <% @despesas = Despesa.all %>

              <% p = @pedidos.sum &:totalPedidos %>
              <% d = @despesas.sum {|i| i.valor } %>

               <%= number_to_currency_br p - d  %>

            </h3>

            <p>Saldo em caixa </p>
          </div>
          <div class="icon">
            <i class="ion ion-bag"></i>
          </div>
          <a href="/relatorio/despesa" class="small-box-footer">Mais informações <i class="fa fa-arrow-circle-right"></i></a>
        </div>
      </div>
<!-- ./col -->
        <div class="col-lg-3 col-xs-6">
          <!-- small box -->
          <div class="small-box bg-green">
            <div class="inner">
              <h3>

                <% @pedidos = Pedido.all %>
                <%= number_to_currency_br @pedidos.sum &:totalPedidos %>

              </h3>

              <p>Receitas</p>
            </div>
            <div class="icon">
              <i class="ion ion-stats-bars"></i>
            </div>
            <a href="/relatorio/despesa" class="small-box-footer">Mais informações <i class="fa fa-arrow-circle-right"></i></a>
          </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
          <!-- small box -->
          <div class="small-box bg-red">
            <div class="inner">
              <h3>

              <% @despesas = Despesa.all %>
              <% d = @despesas.sum {|i| i.valor } %>
              <%= number_to_currency_br d %>
              </h3>
              <p>Despesas</p>
            </div>
            <div class="icon">
              <i class="ion ion-person-add"></i>
            </div>
            <a href="/relatorio/despesa" class="small-box-footer">Mais informações <i class="fa fa-arrow-circle-right"></i></a>
          </div>
        </div>
<!-- ./col -->
</div>
