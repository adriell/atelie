<section class="content">

<div class="row">
  <div class="box box-info">

<div class="box-header with-border">
    <h3 class="box-title"> Produto </h3>
</div>
<%= form_for(produto) do |f| %>
<div class="form-horizontal">
  <% if produto.errors.any? %>
    <div id="error_explanation">
      <!-- <h2><%#= pluralize(produto.errors.count, "error") %> prohibited this produto from being saved:</h2> -->

      <ul>
      <% produto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="box-body">

  <div class="form-group">
    <%= f.label :nome, class:"col-sm-2 control-label" %>
    <div class="col-sm-9">
    <%= f.text_field :nome, class: "form-control", placeholder: "Nome do produto" %>
  </div>
  </div>

  <div class="form-group">


    <%= f.label :descricao, class:'col-sm-2 control-label' %>
    <div class="col-sm-9">
    <%= f.text_area :descricao, class: "form-control", placeholder: "Descrição do produto" %>
  </div>
  </div>
  <div class="form-group">


    <%= f.label :valor, class:'col-sm-2 control-label' %>
    <div class="col-sm-9">
    <%= f.text_field :valor, class: "form-control", placeholder: 'R$00,00'%>

  </div>
  </div>


  <div class="box-footer">
    <%= f.submit 'Cadastrar', class: "btn btn-primary" do  %>
    <i class="glyphicon glyphicon-floppy-disk">  Cadastrar</i>

    <% end %>
    <%= link_to 'Voltar', produtos_path, class: "btn btn-default" %>

  </div>
</div>

</div>
</div>
</div>

<% end %>
</section>
